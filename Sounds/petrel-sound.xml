		<engine>
			<name>engine idle rpm</name>
			<mode>looped</mode>
			<path>Aircraft/percival-petrel/Sounds/queen_idle.wav</path>
			<condition>
				<property>/engines/engine[0]/running</property>
				<less-than>
					<property>/engines/engine[0]/rpm</property>
					<value>1100</value>
				</less-than>
				<greater-than>
					<property>/engines/engine[0]/rpm</property>
					<value>150</value>
				</greater-than>
			</condition>
			<volume>
				<property>/orientation/alpha-deg</property>
				<type>log</type>
				<min>1.0</min>
				<max>1.75</max>
			</volume>
			<volume>
				<property>/sim/current-view/internal</property>
				<offset>1.0</offset>
				<factor>-0.4</factor>
			</volume>
			<pitch>
				<property>/engines/engine[0]/rpm</property>
				<factor>0.0009496</factor>
				<min>0.6</min>
				<max>2.0</max>
				<offset>0</offset>
			</pitch>
		</engine>

