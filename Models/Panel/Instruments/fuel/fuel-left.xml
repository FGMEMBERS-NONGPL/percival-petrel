<?xml version="1.0"?>
  <!-- left fuel tank -->
  <PropertyList>
 
    <path>fuel-left.ac</path>

<effect>
    <inherits-from>Effects/model-transparent</inherits-from>
      <object-name>glass</object-name>
    </effect>

    <animation> 
      <type>rotate</type>
      <object-name>needle</object-name>
      <property>consumables/fuel/tank/level-gal_us</property>
      <interpolation> 
        <entry> 
          <ind>0</ind>
          <dep>25</dep>
        </entry>
        <entry> 
          <ind>6.06</ind>
          <dep>12.5</dep>
        </entry>
        <entry> 
          <ind>12.12</ind>
          <dep>0</dep>
        </entry>
        <entry> 
          <ind>18.18</ind>
          <dep>-12.5</dep>
        </entry>
        <entry> 
          <ind>24.24.18</ind>
          <dep>-25</dep>
        </entry>
      </interpolation>
      <center>
        <x-m>0.0</x-m>
        <y-m>0</y-m>
        <z-m>0.026</z-m>
      </center>
      <axis> 
        <x>-1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </animation>

    <animation> 
      <type>material</type>
      <emission> 
        <factor-prop>controls/lighting/panel-norm</factor-prop>
        <red>0.7</red>
        <green>0.7</green>
        <blue>0.7</blue>
      </emission>
    </animation>

    <animation>
		<type>noshadow</type>
    </animation>

    <!-- *** LoD *** -->

    <animation> 
      <type>range</type>
      <min-m>0</min-m>
      <max-m>5</max-m>
    </animation>
  </PropertyList>
